{
  "content": {
    "modulesContent": {
      "$edgeAgent": {
        "properties.desired.modules": {
          "opcPublisher": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/iotedge/opc-publisher:latest",
              "createOptions": {
                "Cmd": [
                  "--pf=/data/publishedNodes.json",
                  "--aa"
                ],
                "HostConfig": {
                  "Binds": [
                    "/opc:/data"
                  ]
                }
              }
            }
          },
          "opcSimulator": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "iotgwcr.azurecr.io/opcsimulator:latest",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "1880/tcp": [
                      {
                        "HostPort": "1880"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "opcPublisherToIoTHub": "FROM /messages/modules/opcPublisher/* INTO $upstream"
        }
      }
    }
  }
}