{
    "content": {
        "modulesContent": {
            "$edgeAgent": {
                "properties.desired.modules.MetricsCollector": {
                    "settings": {
                        "image": "__IMAGE_REPOSITORY__:__IMAGE_TAG__",
                        "createOptions": ""
                    },
                    "type": "docker",
                    "env": {
                        "AzMonWorkspaceId": {
                            "value": "__WORKSPACE_ID__"
                        },
                        "AzMonWorkspaceKey": {
                            "value": "__WORKSPACE_KEY__"
                        }
                    },
                    "status": "running",
                    "restartPolicy": "always",
                    "version": "1.0"
                }
            },
            "$edgeHub": {
                "properties.desired.routes.MetricsCollectorToIoTHub": "FROM /messages/modules/MetricsCollector/* INTO $upstream"
            },
            "MetricsCollector": {
                "properties.desired": {
                    "schemaVersion": "1.0",
                    "scrapeFrequencySecs": 30,
                    "metricsFormat": "Json",
                    "syncTarget": "IoTHub",
                    "endpoints": {
                        "edgeHub": "http://edgeHub:9600/metrics"
                    }
                }
            }
        }
    }
}
